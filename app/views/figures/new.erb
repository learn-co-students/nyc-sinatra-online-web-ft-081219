<h2>Create a New Figure:</h2>

<form method="POST" action="/figures">
  <label for="figure_name">Name:</label>
  <input type="text" name="figure[name]" id="figure_name">
  
  <h4>Titles</h4>
  <% @titles.each do |title| %>
    <input type="checkbox" value="<%= title.id %>" name="figure[title_ids][]" id="title_<%= title.id %>"><%= title.name %><br>
  <% end %>
  
  <h4>Create New Title:</h4>
  <input type="text" name="title[name]" id="new_title">
  
  <h4>Landmarks</h4>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" value="<%= landmark.id %>" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>"><%= landmark.name %><br>
  <% end %>
  
  <h4>Create New Landmark:</h4>
  <label for="new_landmark">Name:</label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="year_completed">Year Completed:</label>
  <input type="text" name="landmark[year_completed]" id="year_completed">
  
  <input type="submit" value="Create New Figure">
</form>


<a class="button" href="/figures">Figures</a>
